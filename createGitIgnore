OUTFILE=gitignore

cat >$OUTFILE <<EOF
##
## This file has been automatically generated with the command line:
## for pom in \$(find src -name "pom.xml") ; do path=\${pom%*pom.xml} ; echo '#' \$path ; echo ; echo \${path}target ; echo ; done > .gitignore
##
## - ETj

nb*.xml
.classpath
.project
.settings
*~

georepo-gui/core/plugin/mapsui/gwt-unitCache/
georepo-gui/core/plugin/mapsui/war/
georepo-gui/core/plugin/userui/gwt-unitCache/
georepo-gui/core/plugin/userui/war/
georepo-gui/fullweb/gwt-unitCache/
georepo-gui/fullweb/war/WEB-INF/deploy/
georepo-gui/fullweb/war/WEB-INF/classes/
georepo-gui/fullweb/war/WEB-INF/lib/
georepo-gui/fullweb/war/georepo/
georepo-geoserver/web-app/src/main/webapp/data/

EOF

for pom in $(find -name "pom.xml")
do 
	path=${pom%*pom.xml}
	path=${path#\./*}
	echo ${path}target >>$OUTFILE
done

echo New file $OUTFILE has been created. You may now want to replace your original .gitignore file.
echo
