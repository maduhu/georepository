<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context
          http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-autowire="byName">

	<context:annotation-config />

	<bean name="toolbarItemManager" class="it.geosolutions.georepo.gui.client.ToolbarItemManager">
		<property name="clientTools">
			<list>
				<ref bean="toolbarSeparator" />
				<ref bean="zoomIn" />
				<ref bean="zoomOut" />
				<ref bean="updateUsers"/>
				<!-- ref bean="drawFeature" / -->
				<ref bean="logout" />
                <!-- ref bean="save" / -->
			</list>
		</property>
	</bean>
	
	<bean name="zoomIn"
		class="it.geosolutions.georepo.gui.client.configuration.ActionClientTool">
		<property name="id" value="zoomIn" />
		<property name="type" value="button" />
		<property name="enabled" value="true" />
		<property name="order" value="10" />
	</bean>
	
	<bean name="zoomOut"
		class="it.geosolutions.georepo.gui.client.configuration.ActionClientTool">
		<property name="id" value="zoomOut" />
		<property name="type" value="button" />
		<property name="enabled" value="true" />
		<property name="order" value="20" />
	</bean>
	
	<bean name="toolbarSeparator"
		class="it.geosolutions.georepo.gui.client.configuration.GenericClientTool">
		<property name="id" value="ToolbarSeparator" />
		<property name="order" value="30" />
	</bean>
	
	<bean name="updateUsers"
        class="it.geosolutions.georepo.gui.client.configuration.ActionClientTool">
        <property name="id" value="updateUsers" />
        <property name="type" value="button" />
        <property name="enabled" value="true" />
        <property name="order" value="40" />
    </bean>	
	
	<bean name="drawFeature"
		class="it.geosolutions.georepo.gui.client.configuration.ActionClientTool">
		<property name="id" value="drawFeature" />
		<property name="type" value="toggle" />
		<property name="enabled" value="false" />
		<property name="order" value="50" />
	</bean>
	
    <bean name="save"
        class="it.geosolutions.georepo.gui.client.configuration.ActionClientTool">
        <property name="id" value="save" />
        <property name="type" value="button" />
        <property name="enabled" value="true" />
        <property name="order" value="90" />
    </bean>

    <bean name="logout"
        class="it.geosolutions.georepo.gui.client.configuration.ActionClientTool">
        <property name="id" value="logout" />
        <property name="type" value="button" />
        <property name="enabled" value="true" />
        <property name="order" value="240" />
    </bean>


</beans>