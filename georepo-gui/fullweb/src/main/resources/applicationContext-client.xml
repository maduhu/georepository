<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"

	   xmlns:cxf="http://cxf.apache.org/core"
	   xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:georepo="http://geosolutions.it/georepo"

       xsi:schemaLocation="
          http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context
          http://www.springframework.org/schema/context/spring-context-3.0.xsd
          http://cxf.apache.org/jaxws
          http://cxf.apache.org/schemas/jaxws.xsd
		  http://cxf.apache.org/core
		  http://cxf.apache.org/schemas/core.xsd"
       default-autowire="byName">

       <context:annotation-config />

       <!-- ================================================================ -->
       <!-- ================================================================ -->
       <!-- === CLIENT ===================================================== -->
       <!-- ================================================================ -->
       <!-- ================================================================ -->

       <context:component-scan base-package="it.geosolutions.georepo.gui" />

       <import resource="applicationContext-Service.xml" />

       <!-- ================================================================ -->
       <!-- ================================================================ -->
       <!-- === SERVICES =================================================== -->
       <!-- ================================================================ -->
       <!-- ================================================================ -->


    <!-- ====================================================================-->
    <!-- Some extra bean here: we're replacing some functionalities we do not need in test -->
    <!-- ====================================================================-->

	<!-- Load CXF modules from cxf.jar -->
    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-http-binding.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-jaxws.xml"/>


    <!-- ====================================================================-->
    <!-- Service endpoints -->
    <!-- ====================================================================-->

    <jaxws:endpoint id="userAdminXML"
    	implementorClass="it.geosolutions.georepo.services.UserAdminServiceImpl"
    	implementor="#userAdminService"
    	address="/ws/useradmin"
    	bindingUri="http://apache.org/cxf/binding/http"  >

        <jaxws:serviceFactory>
		    <bean class="org.apache.cxf.jaxws.support.JaxWsServiceFactoryBean">
		    	<property name="wrapped" value="true" />
		    </bean>
    	</jaxws:serviceFactory>
    </jaxws:endpoint>

    <!-- ====================================================================-->
    <!-- Enable message logging using the CXF logging feature -->

    <cxf:bus>
    	<cxf:features>
    		<cxf:logging/>
	    </cxf:features>
	</cxf:bus>

</beans>