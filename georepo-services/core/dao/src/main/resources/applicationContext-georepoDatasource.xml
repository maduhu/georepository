    <!-- ====================================================================-->

    <bean id="georepoDataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${georepoDataSource.driver}" />
        <property name="url" value="${georepoDataSource.url}" />
        <property name="username" value="${georepoDataSource.username}" />
        <property name="password" value="${georepoDataSource.password}" />
    </bean>

    <bean id="georepoEntityManagerFactory"
                class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="persistenceUnitName" value="georepo" />
        <property name="persistenceXmlLocation" value="classpath:META-INF/georepo-persistence.xml" />
        <property name="dataSource" ref="georepoDataSource" />
        <property name="loadTimeWeaver">
            <bean class="org.springframework.instrument.classloading.InstrumentationLoadTimeWeaver" />
        </property>
        <property name="jpaVendorAdapter" ref="georepoVendorAdapter" />
        <property name="jpaPropertyMap">
            <map>
                <entry key="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider"/>
                <entry key="hibernate.cache.provider_configuration_file_resource_path" value="classpath:georepo-ehcache.xml"/>
                <entry key="hibernate.cache.use_second_level_cache" value="true"/>
                <entry key="hibernate.connection.autocommit" value="true"/>
                <entry key="hibernate.generate_statistics" value="false"/>
                <entry key="hibernate.default_schema" value="${georepoDataSource.schema}" />
            </map>
        </property>
    </bean>

    <bean id="georepoVendorAdapter"
                class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="databasePlatform" value="org.hibernatespatial.postgis.PostgisDialect" />
        <property name="showSql" value="true" />
        <property name="generateDdl" value="false" />
    </bean>

    <bean id="georepoTransactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="georepoEntityManagerFactory" />
    </bean>

    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" />

    <tx:annotation-driven />

</beans>


