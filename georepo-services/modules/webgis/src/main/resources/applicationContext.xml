
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

	   xmlns:cxf="http://cxf.apache.org/core"
	   xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"

       xsi:schemaLocation="
            http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://cxf.apache.org/jaxws                     http://cxf.apache.org/schemas/jaxws.xsd
            http://cxf.apache.org/jaxrs                     http://cxf.apache.org/schemas/jaxrs.xsd
            http://cxf.apache.org/core                      http://cxf.apache.org/schemas/core.xsd
            http://www.springframework.org/schema/context   http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-autowire="byName">

   <!-- === ======================================================== -->

    <bean id="wgProfilesInitter" class="it.geosolutions.georepo.services.webgis.utils.WGProfilesInitializer" lazy-init="false">
<!--        <property name="profileDAO" ref="profileDAO"/>
        <property name="instanceDAO" ref="instanceDAO"/>
        <property name="ruleDAO" ref="ruleDAO"/>
        <property name="ruleLimitsDAO" ref="rulelimitsDAO"/>
        <property name="detailsDAO" ref="layerdetailsDAO"/>-->
    </bean>

   <!-- === CXF ======================================================== -->
   
	<!-- Load CXF modules from cxf.jar -->
    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-jaxrs-binding.xml" />

    <!-- ====================================================================-->
    <!-- === REST Services ==================================================-->
    <!-- ====================================================================-->


    <bean id="wgFuncService" class="it.geosolutions.georepo.services.webgis.impl.WGFuncServiceImpl">
        <property name="profileDAO" ref="profileDAO"/>
    </bean>

    <bean id="wgTocService" class="it.geosolutions.georepo.services.webgis.impl.WGTocServiceImpl">
        <property name="ruleAdminService" ref="ruleAdminService"/>
    </bean>

    <bean id="wgSguService" class="it.geosolutions.georepo.services.webgis.impl.WGSGUServiceImpl">
        <property name="gsUserDAO" ref="gsUserDAO"/>
    </bean>

    <jaxrs:server id="webgisREST" address="/webgis">
        <jaxrs:serviceBeans>
          <ref bean="wgFuncService"/>
          <ref bean="wgTocService"/>
          <ref bean="wgSguService"/>
        </jaxrs:serviceBeans>

        <jaxrs:features>
             <cxf:logging/>
        </jaxrs:features>

    </jaxrs:server>


</beans>