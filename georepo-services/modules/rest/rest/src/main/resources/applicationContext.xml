
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

	   xmlns:cxf="http://cxf.apache.org/core"
	   xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"

       xsi:schemaLocation="
            http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://cxf.apache.org/jaxws                     http://cxf.apache.org/schemas/jaxws.xsd
            http://cxf.apache.org/jaxrs                     http://cxf.apache.org/schemas/jaxrs.xsd
            http://cxf.apache.org/core                      http://cxf.apache.org/schemas/core.xsd
            http://www.springframework.org/schema/context   http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-autowire="byName">

   <!-- === CXF ======================================================== -->

	<!-- Load CXF modules from cxf.jar -->
    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-jaxrs-binding.xml" />

    <!-- ====================================================================-->
    <!-- === Service providers ==============================================-->
    <!-- ====================================================================-->

    <bean id="restUserService" class="it.geosolutions.georepo.services.rest.impl.RESTUserServiceImpl">
        <property name="profileAdminService" ref="profileAdminService"/>
        <property name="userAdminService" ref="userAdminService"/>
    </bean>

    <bean id="restProfileService" class="it.geosolutions.georepo.services.rest.impl.RESTProfileServiceImpl">
        <property name="profileAdminService" ref="profileAdminService"/>
    </bean>

    <bean id="restConfigService" class="it.geosolutions.georepo.services.rest.impl.RESTConfigServiceImpl">
    </bean>

    <bean id="instanceCleaner" class="it.geosolutions.georepo.services.rest.utils.InstanceCleaner">
    </bean>


    <!-- ====================================================================-->
    <!-- === REST Services ==================================================-->
    <!-- ====================================================================-->

    <jaxrs:server id="georepoRESTUser" address="/users">
        <jaxrs:serviceBeans>
          <ref bean="restUserService"/>
        </jaxrs:serviceBeans>

        <jaxrs:features>
             <cxf:logging/>
        </jaxrs:features>

<!--        <jaxrs:providers>
           <ref bean="jaxbXmlProvider"/>
           <ref bean="jsonProvider"/>
        </jaxrs:providers>-->

        <!--jaxrs:inInterceptors>
           <ref bean="securityInterceptor"/>
           <<ref bean="authorizationInterceptor"/>>
        </jaxrs:inInterceptors-->
    </jaxrs:server>

    <jaxrs:server id="georepoRESTProfile" address="/profiles">
        <jaxrs:serviceBeans>
          <ref bean="restProfileService"/>
        </jaxrs:serviceBeans>

        <jaxrs:features>
             <cxf:logging/>
        </jaxrs:features>

        <jaxrs:providers>
           <ref bean="jaxbXmlProvider"/>
           <ref bean="jsonProvider"/>
<!--           <ref bean="jaxbContextResolver"/>-->
        </jaxrs:providers>

        <jaxrs:inInterceptors>
<!--            <bean class="it.geosolutions.geostore.services.rest.utils.GeoStoreAuthenticationInterceptor"/>
            <bean class="org.apache.cxf.interceptor.security.SecureAnnotationsInterceptor">
               <property name="securedObject" ref="restResourceService"/>
            </bean>-->
        </jaxrs:inInterceptors>
    </jaxrs:server>

    <jaxrs:server id="georepoRESTConfig" address="/config">
        <jaxrs:serviceBeans>
          <ref bean="restConfigService"/>
        </jaxrs:serviceBeans>

        <jaxrs:features>
             <cxf:logging/>
        </jaxrs:features>

        <jaxrs:providers>
           <ref bean="jaxbXmlProvider"/>
           <ref bean="jsonProvider"/>
        </jaxrs:providers>

<!--        <jaxrs:inInterceptors>
            <bean class="org.apache.cxf.interceptor.security.SecureAnnotationsInterceptor">
               <property name="securedObject" ref="restCategoryService"/>
            </bean>
        </jaxrs:inInterceptors>-->
    </jaxrs:server>

    <!-- ====================================================================-->
    <!-- === CXF Providers ==================================================-->
    <!-- ====================================================================-->

    <bean id="jaxbXmlProvider" class="org.apache.cxf.jaxrs.provider.JAXBElementProvider"/>
    <bean id="jsonProvider" class="org.apache.cxf.jaxrs.provider.JSONProvider"/>
<!--    <bean id="jaxbContextResolver" class="it.geosolutions.geostore.services.rest.auth.JAXBContextResolver" />-->

    <!-- ====================================================================-->
    <!-- === CXF Interceptors ===============================================-->
    <!-- ====================================================================-->

<!--    <bean id="securityInterceptor" class="it.geosolutions.geostore.services.rest.auth.AuthenticationHandler">
    	<property name="realm" value="GeoStore REST Service"/>
    </bean>-->

