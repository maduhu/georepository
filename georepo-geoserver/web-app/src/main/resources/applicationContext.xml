<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- The servlet filter that performs the Georepo authentication -->
  <bean id="georepoAuthFilter" class="it.geosolutions.georepository.AuthenticationFilter">
  </bean>

  <bean id="webGSEnterpriseDispatcherMapping"
    class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping"
    lazy-init="true">
    <property name="alwaysUseFullPath" value="true" />
    <property name="mappings">
      <props>
        <prop key="/js/**">filePublisher</prop>
      </props>
    </property>
  </bean>

</beans>
